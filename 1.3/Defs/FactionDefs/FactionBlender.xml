      <!-- Standard collection of all fighters -->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options/>
      </li>
      <!-- Ranged only -->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>65</commonality>
        <options/>
      </li>
      <!-- Melee only -->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>60</commonality>
