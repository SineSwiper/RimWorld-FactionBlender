        <maxTotalPoints>2000</maxTotalPoints>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options/>
      </li>
      <!-- Snipers only -->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>40</commonality>
        <options/>
      </li>
      <!-- Heavy damage types -->
